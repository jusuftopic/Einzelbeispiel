<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/antwortFromServer"
        android:layout_width="287dp"
        android:layout_height="59dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:gravity="center|clip_vertical|center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="308dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="196dp"
        android:gravity="center|clip_vertical|center_horizontal"
        android:text="Antwort vom Server:"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="345dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center|clip_vertical|center_horizontal"
        android:text="Gib deine Martikelnummer ein"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/martikelnummer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/abschciken"
        android:layout_width="149dp"
        android:layout_height="37dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="164dp"
        android:text="Abschicken"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/antwortFromServer"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>